<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.practice.osho.mcqproject.Quiz_ChooseLevelActivity">

    <ImageView
        android:clickable="true"
        android:layout_marginBottom="5dp"
        android:id="@+id/basicCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/quiz_basic"
        />
    <ImageView
        android:clickable="true"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:id="@+id/intermediateCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/quiz_intermediate"
        />
    <ImageView
        android:clickable="true"
        android:padding="5dp"
        android:id="@+id/toughCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/quiz_tough"
        />



</LinearLayout>
